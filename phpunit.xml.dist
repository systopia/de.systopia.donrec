<?xml version="1.0"?>
<!-- We have some undefined array key access in templates so convertWarningsToExceptions has to be disabled. -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
         colors="true"
         failOnRisky="true"
         failOnWarning="true"
         forceCoversAnnotation="true"
         convertWarningsToExceptions="false"
         bootstrap="tests/phpunit/bootstrap.php">

  <php>
    <ini name="error_reporting" value="-1"/>
    <env name="SYMFONY_DEPRECATIONS_HELPER" value="max[direct]=0&amp;baselineFile=./tests/ignored-deprecations.json"/>
  </php>

  <testsuites>
    <testsuite name="de.systopia.donrec Test Suite">
      <directory>./tests/phpunit</directory>
    </testsuite>
  </testsuites>

  <coverage>
    <include>
      <directory suffix=".php">api</directory>
      <directory suffix=".php">CRM</directory>
      <directory suffix=".php">Civi</directory>
    </include>
    <exclude>
      <directory>CRM/Donrec/DAO</directory>
    </exclude>
  </coverage>

  <listeners>
    <listener class="Civi\Test\CiviTestListener">
      <arguments/>
    </listener>
  </listeners>

</phpunit>
